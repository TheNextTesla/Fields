<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="positive_plate_left"
        android:summary="@string/pref_description_positive_plate_left"
        android:title="@string/pref_title_positive_plate_left" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="2"
        android:entries="@array/pref_obstacle_speed_list_titles"
        android:entryValues="@array/pref_obstacle_speed_list_values"
        android:key="obstacle_speed"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_obstacle_speed" />

</PreferenceScreen>
